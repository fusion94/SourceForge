function display_groups($group_id) {
	// show list of groups to edit.
	$query = "select * "
		."from doc_groups "
		."where group_id = '$group_id'";
	$result = db_query($query);
	
	if (db_numrows($result) < 1) {
		print "No groups currently exist.";
	} else {
		echo '
			<table border="1">
			 <tr>
			 <td>Group ID</td>
			 <td>Group Name</td>
		  	 <td>Controls</td>
			</tr>
		';

		while ($row = db_fetch_array($result)) {
